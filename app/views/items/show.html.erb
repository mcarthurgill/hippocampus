<div class="col-xs-12">
  <% if @item.bucket %>
    <h4><a href=<%= bucket_path(@item.bucket) %>>Assigned to: <%= @item.display_bucket_name %></a></h4>
  <% else %>
    <h4><%= @item.display_bucket_name %></h4>
  <% end %>
  <p>
    <%= @item.message %>
  </p>

  <% if @item.reminder_date %>
    <p>Reminder set for: <%= @item.formatted_reminder_date %></p>
  <% end %>
  <%= link_to "Edit", edit_item_path(@item), :class => "btn btn-link" %> | 
  <%= link_to "See All Notes", user_path(current_user), :class => "btn btn-link" %>
</div>  
