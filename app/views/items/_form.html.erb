<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message, :cols => 40, :rows => 10 %>
  </div>
  <div class="field">
    <%= f.label :item_type %><br />
    <%= f.select :item_type, options_for_select(Item.item_types) %>
  </div>
  <div class="field">
    <%= f.label "Set Reminder" %><br>
    <%= f.date_select(:reminder_date, {:order => [:month, :day, :year], :include_blank => true }) %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-default" %>
  </div>
<% end %>
