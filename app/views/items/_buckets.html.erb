<% if @item.has_buckets? %>
  <div class="row">
    <div class="col-xs-12">
      <h6>Stacks:</h6>
      <p>
        <% @item.buckets.each do |b| %>
          <%= link_to "#{b.display_name} <span class='badge'>#{b.items_count}</span>".html_safe, b, {role: 'button', class: 'btn btn-default', style: 'margin-bottom:4px;'} %>
        <% end %>
      </p>
    </div>
  </div>
  <br/>
<% end %>