<h1>Listing items</h1>
<h3>New Users last 24 hours: <%= @new_users_last_24_hours %></h3>
<h3>Users added thought last 24 hours: <%= @users_added_item_last_24_hours %></h3>
<table>
  <tr>
    <th>Message</th>
    <th>User</th>
    <td>Created</td>
    <td>Input</td>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.message %></td>
    <td><%= item.user.phone %></td>
    <td><%= item.created_at_central_time.strftime("%D") %></td>
    <td><%= item.input_method %></td>
  </tr>
<% end %>
</table>

