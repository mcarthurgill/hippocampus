<% if @user.buckets.count > 0 %>

  <div class="row">
    <div class="col-xs-12">
      <div class="list-group">
        <% @user.buckets.by_first_name.each do |b| %>
          <a href='#' class="list-group-item">
            <h4 class="list-group-item-heading"><%= b.display_name %></h4>
          </a>
        <% end %>
      </div>
    </div>
  </div>

<% end %>