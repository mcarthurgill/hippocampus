<div class="row">
  <div class="col-xs-12">
    <p class="lead"><%= @bucket.display_name %></p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="list-group">
      <% @bucket.items.by_date.each do |i| %>
        <a href=<%= item_path(i) %> class="list-group-item">
          <h4 class="list-group-item-heading"></h4>
          <p class="list-group-item-text"><%= i.message %></p>
        </a>
      <% end %>
    </div>
  </div>
</div>