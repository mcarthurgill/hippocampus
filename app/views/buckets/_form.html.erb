<%= form_for(@bucket) do |f| %>
  <% if @bucket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bucket.errors.count, "error") %> prohibited this bucket from being saved:</h2>

      <ul>
      <% @bucket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h6>Stack name:</h6>
    <%= f.text_field :first_name, class: 'form-control' %>
    <br/>
  </div>

  <div class="field">
    <h6>Stack type:</h6>
    <%= f.select :bucket_type, options_for_select(Bucket.bucket_types), {}, class: 'form-control' %>
    <br/>
    <br/>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <% if @item_id %>
    <%= hidden_field_tag :with_item, @item_id %>
  <% end %>
  <div class="actions">
    <%= f.submit "Save + Add", :class => "btn btn-primary btn-md btn-block" %>
  </div>

  <% if @bucket.id %>
    <p></p>
    <%= link_to 'Delete Stack', @bucket, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-md btn-block' %>
    <br/>
  <% end %>

<% end %>
