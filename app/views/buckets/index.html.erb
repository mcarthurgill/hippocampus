<h1>Listing buckets</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Description</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @buckets.each do |bucket| %>
  <tr>
    <td><%= bucket.first_name %></td>
    <td><%= bucket.last_name %></td>
    <td><%= bucket.description %></td>
    <td><%= bucket.user_id %></td>
    <td><%= link_to 'Show', bucket %></td>
    <td><%= link_to 'Edit', edit_bucket_path(bucket) %></td>
    <td><%= link_to 'Destroy', bucket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

