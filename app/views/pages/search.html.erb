<div class="row">
  <div class="col-xs-12">
    <div class="list-group" id="items-container">
      <% @results.records['items'].each do |record| %>
        <a href=<%= item_path(record["item_id"]) %> class="list-group-item">
          <div class="row">
            <div class="col-md-6">
              <h4 class="list-group-item-heading"></h4>
              <p class="list-group-item-text lead" style="overflow:hidden;"><%= record["message"] %></p>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="list-group" id="items-container">
      <% @results.records['buckets'].each do |record| %>
        <a href=<%= bucket_path(record["bucket_id"]) %> class="list-group-item">
          <div class="row">
            <div class="col-md-6">
              <h4 class="list-group-item-heading"></h4>
              <p class="list-group-item-text lead" style="overflow:hidden;"><%= record["first_name"] %></p>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
