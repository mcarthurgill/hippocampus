<!-- Main Content -->
<main class="main-content" role="main" aria-label="Main Content">

  <%= render 'shared/search_results_list' %>

  <!-- Nudges -->
  <div class="nudges-list-wrap sorted-list">
    <!-- List -->
    <ul class="list nudges-list scene_element--fadeinup scene_element scene_delay">
      <% alreadyDisplayedToday = false %>
      <% alreadyDisplayedUpcoming = false %>
      <% @reminders.each do |i| %>
        <% if (formatted_date(i.next_reminder_date) == formatted_date(DateTime.now.in_time_zone(current_user.time_zone))) && !alreadyDisplayedToday %>
          <% alreadyDisplayedToday = true %>
          <li class="section"><h5>today's nudges</h5></li>
        <% elsif (formatted_date(i.next_reminder_date) != formatted_date(DateTime.now.in_time_zone(current_user.time_zone))) &&!alreadyDisplayedUpcoming %>
          <% alreadyDisplayedUpcoming = true %>
          <li class="section"><h5>upcoming nudges</h5></li>
        <% end %>
        <%= render 'reminder_preview', :item => i %>
      <% end %>
      <% if @reminders.count == 0 %>
        <li class="section"><h5>No upcoming nudges!</h5></li>
      <% end %>
    </ul>
  </div>
</main>