
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
      <div class="col-xs-8">
        <p><%= link_to 'Hippocampus', root_path %></p>
      </div>
      <div class="col-xs-4 text-right">
        <p><%= link_to 'Download', 'https://appsto.re/us/_BWZ5.i', target: '_blank' %></p>
      </div>
    </div>
    <br>
    <br>
    <% @use_cases.each do |use_case| %>
      <div class="row vcenter">
        <div class="col-md-3 col-md-offset-2 col-xs-4 col-xs-offset-1">
          <div class="row">
            <%= link_to image_tag(use_case.image_url, class: 'img-responsive', border: '0').html_safe, 'https://appsto.re/us/_BWZ5.i', target: '_blank' %>
          </div>
        </div>
        <div class="col-md-5 col-md-offset-1 col-xs-5 col-xs-offset-1">
          <div class="row">
            <p class="lead"><%= use_case.text %></p>
            <br>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
