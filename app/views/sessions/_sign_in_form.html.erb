  <div class="col-md-4 col-md-offset-4">
    <%= form_tag passcode_path do %>
      <%= number_field_tag :phone, "", :placeholder => "Enter your mobile number", :class => "form-control", :style => "margin-bottom:5px;" %>
      <%= submit_tag "Go", :class => "btn btn-primary btn-md btn-block" %>
    <% end %>
  </div>
</div>