<li id="item<%= item.id %>">
  <% if item.next_reminder_date || item.outstanding? %>
    <div class="status-info">
      <% if item.next_reminder_date %>
        <%= render 'shared/items/item_reminder' %>
      <% end %>
      <% if item.outstanding? %>
        <%= render 'shared/items/item_outstanding' %>
      <% end %>
    </div>
  <% end %>
  <%= link_to item.message, Rails.application.routes.url_helpers.item_path(item) %>
  <% if item.has_media? %>
    <%= render 'shared/items/item_media', :item => item %>
  <% end %>
  <p><%= item.visible_buckets_for_user(current_user).count %></p>
  <% if (item.visible_buckets_for_user(current_user).count > 1 && @bucket) || (item.visible_buckets_for_user(current_user).count > 0 && !@bucket) %>
    <%= render 'shared/items/item_buckets_stickers', :item => item %>
  <% end %>
</li>
