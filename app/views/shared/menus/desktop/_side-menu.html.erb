<nav class="side-menu" role="navigation" aria-label="Side Menu">
  <div class="profile-overview">
    <%= link_to user_path(current_user) do %>
      <%= image_tag current_user.avatar_path, :class => "avatar avatar-image" %>
    <% end %>
    <a class="name" href="#" id="profile-menu-trigger" data-jq-dropdown="#profile-menu-1"><%= current_user.name ? current_user.name : "Profile" %></a>
    <div id="profile-menu-1" class="jq-dropdown jq-dropdown-tip">
      <ul class="jq-dropdown-menu">
        <li><%= link_to user_path(current_user) do %>Settings<% end %></li>
        <li><%= link_to logout_path do %>Logout<% end %></li>
      </ul>
    </div>

    <small>Last active <%= time_ago_in_words(current_user.last_activity) %> ago</small>
    <!--<small>(<%= long_formatted_time(current_user.last_activity) %>)</small>-->
  </div>
  <ul class="nav-list">
    <li><h5>Most Recent</h5></li>
    <% @recent_buckets.each do |b| %>
      <li class="<%= (@bucket && @bucket == b) ? 'active' : '' %>"><a href="<%= bucket_info_path(b) %>"><%= b.first_name %></a></li>
    <% end %>
  </ul>
</nav>